#add a schema
#Start psql shell from windows command line
docker exec -it postgres psql -U postgres

 #Start Typing, lol
 
 	create schema va_assessment;
 
    create table va_assessment.notifications (
        id int generated by default as identity,
        template_id int not null unique,
        personalization VARCHAR(25),
        phone_number VARCHAR(20) not null,
        primary key (id)
    );
    
    create table va_assessment.templates (
        id int generated by default as identity,
        body VARCHAR(200) not null,
        primary key (id)
    )

    alter table if exists va_assessment.notifications
       add constraint FKp7yaend3irytaep1s4hrmi4e2
       foreign key (template_id)
       references va_assessment.templates;
       
 #check work
 
 SELECT * FROM pg_catalog.pg_tables WHERE schemaname='va_assessment';
 
 #Control-D to exit(when all work is done)
 
       